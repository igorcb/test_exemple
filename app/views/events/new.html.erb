<h1>New Event<h1/>

<%= form_for(@event) do |f| %>
  <div class="form-group">
    <%= f.label :what  %><br />
    <%= f.text_field :what, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Event", class: "btn" %> |
    <%= link_to 'List All', events_path %>
  </div>
<% end %>

